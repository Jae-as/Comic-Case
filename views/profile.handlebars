    <div class="profile-sidebar bg-dark">
        <ul class="nav nav-pills nav-flush flex-sm-column flex-row mb-auto mx-auto text-center align-items-center justify-content-center">
            <li class="nav-item">
            </li>
                <h4>{{ user.email }}</h4>
            <li>
                <p>{{ user.location }}</p>
            </li>
            <li>
                <p>{{ user.join_date }}</p>
            </li>
        </ul>
        <div class="profile-create-box align-items-center justify-content-center">
            <form>
            <h2>Add new case</h2>
                <div class="user-box ">
                    <input  id="create-case" type="text" name="q" placeholder="comic Name">
                    <input  id="create-case" type="text" name="q" placeholder="issue number">
                </div>
                <a href="#" id="search-submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                create
                </a>
            </form>
        </div>
        
    </div>
    <div class="profile-content">
        {{#each comics as |comic| }}
        <div class="profile-card profile-card-size">
            <img class="card-img-top cardImage" src={{ comic.image }} alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title text-center">{{ comic.title }}</h5>
                <ul>
                    <li class="publisher">{{ comic.publisher }}</li>
                    <li class="publish-date">{{ comic.published_date}}</li>
                </ul>
            </div>
        </div>
        {{/each}}
    </div>
    
    